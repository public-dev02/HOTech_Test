{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"],
            "@bootstrap/*": ["node_modules/bootstrap/scss/*"],
        },
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"]
}
