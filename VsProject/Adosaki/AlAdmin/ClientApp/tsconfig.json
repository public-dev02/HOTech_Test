{
  "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/",
      "module": "esnext",
      "target": "es6",
      "lib": ["es6", "dom"],
      "allowJs": true,
      "moduleResolution": "node",
      "paths": {
          "@/*": ["src/*"],
          "@bootstrap/*": ["node_modules/bootstrap/*"],
      },
      "allowSyntheticDefaultImports": true,
      "sourceMap": true
  },
  "exclude": ["node_modules"]
}
